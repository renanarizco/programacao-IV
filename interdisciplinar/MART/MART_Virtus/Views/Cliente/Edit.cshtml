@model MART_Virtus.Models.Cliente

@{
    ViewData["Title"] = "Editar cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EDITAR</h1>

<h4>Editar cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cliente_id" />
            <div class="form-group">
                <label asp-for="cliente_nome" class="control-label"></label>
                <input asp-for="cliente_nome" class="form-control" required />
                <span asp-validation-for="cliente_nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_tipo" class="control-label"></label>
                <input asp-for="cliente_tipo" class="form-control" required />
                <span asp-validation-for="cliente_tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_rg" class="control-label"></label>
                <input asp-for="cliente_rg" class="form-control"  />
                <span asp-validation-for="cliente_rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_cnpj" class="control-label"></label>
                <input asp-for="cliente_cnpj" class="form-control" required/>
                <span asp-validation-for="cliente_cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_logradouro" class="control-label"></label>
                <input asp-for="cliente_logradouro" class="form-control" required />
                <span asp-validation-for="cliente_logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_rua" class="control-label"></label>
                <input asp-for="cliente_rua" class="form-control" required />
                <span asp-validation-for="cliente_rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_numero" class="control-label"></label>
                <input asp-for="cliente_numero" class="form-control" required />
                <span asp-validation-for="cliente_numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_bairro" class="control-label"></label>
                <input asp-for="cliente_bairro" class="form-control" required />
                <span asp-validation-for="cliente_bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_complemento" class="control-label"></label>
                <input asp-for="cliente_complemento" class="form-control"  />
                <span asp-validation-for="cliente_complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_cep" class="control-label"></label>
                <input asp-for="cliente_cep" class="form-control" required />
                <span asp-validation-for="cliente_cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_email" class="control-label"></label>
                <input asp-for="cliente_email" class="form-control" required />
                <span asp-validation-for="cliente_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_telefone" class="control-label"></label>
                <input asp-for="cliente_telefone" class="form-control" required />
                <span asp-validation-for="cliente_telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" onclick="Cli_edit()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
