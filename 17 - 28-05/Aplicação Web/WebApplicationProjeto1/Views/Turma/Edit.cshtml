@model WebApplicationProjeto1.Models.Turma

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="turma_id" />
            <div class="form-group">
                <label asp-for="turma_nome" class="control-label"></label>
                <input asp-for="turma_nome" class="form-control" />
                <span asp-validation-for="turma_nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="turma_cod" class="control-label"></label>
                <input asp-for="turma_cod" class="form-control" />
                <span asp-validation-for="turma_cod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-meu" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
